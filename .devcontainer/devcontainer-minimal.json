{
  "name": "Video2X Notebook Environment (Minimal)",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.jupyter"
      ]
    }
  },
  
  "postCreateCommand": "bash .devcontainer/setup-minimal.sh",
  
  "forwardPorts": [8888],
  
  "remoteUser": "vscode"
}